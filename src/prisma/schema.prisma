generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model User {
id Int @id @default(autoincrement())
name String
email String @unique
password String
}

model Car {
id Int @id @default(autoincrement())
name String @unique
brand CarBrand @relation(fields: [brandId], references: [id])
brandId Int
partCategory Category[]
}

model Category {
  id Int @id @default(autoincrement())
  name String 
  car Car @relation(fields: [carId], references: [id])
  carId Int
  part CarPart[]
}

model CarBrand {
id Int @id @default(autoincrement())
name String
cars Car[]
}

model CarPart {
  id Int @id @default(autoincrement())
  name String
  category Category @relation(fields: [categoryId], references: [id])
  categoryId Int
}